<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <View
                android:layout_width="190dp"
                android:layout_height="87dp"
                android:background="@drawable/co"
                android:id="@+id/circleOne"
                android:layout_alignParentEnd="true"
                />
            <View
                android:layout_width="86dp"
                android:layout_height="169dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/circleTwo"
                android:background="@drawable/co1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Sign Up"
                android:layout_marginTop="15dp"
                android:layout_marginStart="34dp"
                android:layout_below="@id/circleOne"
                android:id="@+id/signIn"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Create an account to get started !"
                android:layout_marginStart="34dp"
                android:id="@+id/description"
                android:layout_below="@id/signIn"
                android:layout_marginTop="5dp"
                android:textColor="#8A000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/description"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbg"
                    android:layout_marginTop="11dp"
                    app:boxStrokeWidth="0dp"
                    android:layout_marginEnd="34dp"
                    app:boxBackgroundMode="none"
                    app:cursorColor="@color/black"
                    app:hintEnabled="false"
                    android:layout_marginStart="34dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/signUpName"
                        android:hint="Enter your name"
                        android:textColorHint="#8A000000"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbg"
                    android:layout_marginTop="11dp"
                    app:boxStrokeWidth="0dp"
                    android:layout_marginEnd="34dp"
                    app:cursorColor="@color/black"

                    app:boxBackgroundMode="none"
                    app:hintEnabled="false"
                    android:layout_marginStart="34dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your mail"
                        android:inputType="textEmailAddress"
                        android:id="@+id/signUpEmail"
                        android:textColorHint="#8A000000"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbg"
                    android:layout_marginTop="11dp"
                    app:boxStrokeWidth="0dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#5C5353"
                   app:endIconTint="@color/black"
                    android:layout_marginEnd="34dp"
                    app:boxBackgroundMode="none"
                    app:cursorColor="@color/black"

                    app:hintEnabled="false"
                    android:layout_marginStart="34dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter password"
                        android:id="@+id/signUpPassword"
                        android:inputType="textPassword"
                        android:textColorHint="#8A000000"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbg"
                    android:layout_marginTop="11dp"
                    app:boxStrokeWidth="0dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#5C5353"
                    android:layout_marginEnd="34dp"
                    app:boxBackgroundMode="none"
                    app:cursorColor="@color/black"

                    app:hintEnabled="false"
                    android:layout_marginStart="34dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Re-Enter password"
                        android:inputType="textPassword"
                        android:textColorHint="#8A000000"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:id="@+id/signUpConfirmPassword"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#572C0A"
                    app:cornerRadius="12dp"
                    android:text="Sign Up"
                    android:id="@+id/signUpButton"
                    android:textSize="12.5sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="34dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Already have an account? Login"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="34dp"
                    android:id="@+id/signUpToLoginPage"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="34dp"
                    android:textColor="#FF8F00"
                    android:textSize="12.5sp" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>